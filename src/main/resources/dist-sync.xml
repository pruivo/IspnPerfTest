<?xml version="1.0" encoding="UTF-8"?>

<infinispan
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:infinispan:config:12.1  http://www.infinispan.org/schemas/infinispan-config-12.1.xsd"
        xmlns="urn:infinispan:config:12.1"
        xmlns:counter="urn:infinispan:config:counters:12.1">


    <jgroups>
        <stack-file name="jgroupsStack" path="jgroups-tcp.xml"/>
    </jgroups>


    <cache-container name="default" default-cache="perf-cache">
        <!--transport stack="jgroupsStack" lock-timeout="600000" cluster="default" remote-command-executor="custom-remote" /-->
        <transport stack="jgroupsStack" lock-timeout="600000" cluster="default"/>
        <jmx>
            <property name="enabled">true</property>
        </jmx>
        <distributed-cache name="perf-cache" remote-timeout="60000" statistics="true" segments="512">
            <locking acquire-timeout="3000" concurrency-level="1000"/>
            <state-transfer timeout="60000"/>
        </distributed-cache>
        <counter:counters>
            <counter:strong-counter name="strong-counter"/>
            <counter:weak-counter name="weak-counter"/>
        </counter:counters>
    </cache-container>

</infinispan>